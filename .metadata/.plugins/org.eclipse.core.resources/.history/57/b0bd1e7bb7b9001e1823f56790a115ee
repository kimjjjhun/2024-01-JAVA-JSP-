package ex04;

import java.util.Scanner;

public class 연습장 {

	public static void main(String[] args) {
		
		//3개의 문자열을 선언하고 입력받아 차례대로 출력해보자
	
		//int형 배열 생성후 랜덤(1~100)이용해서 배열 크기 10값 저장
				//그 배열 총점.평균 구하기
	int total = 0;
	double avg = 0;
	int[] a = new int[10];
	for(int i = 0; i<a.length; i++) {
		 int num = (int)(Math.random()*100)+1;
		 a[i] = num;
	}
		 
		 for(int i=0; i<a.length; i++)
			 System.out.print(a[i] + " ");
		 
		 System.out.println("\n------------------------");
		
		 for(int i=0; i<a.length; i++)	 
		total += a[i];
		 
	avg = (double)total/a.length;
	 System.out.print("총점 : " + total + "평균 : " + avg);
		
	
	}
	
}
	



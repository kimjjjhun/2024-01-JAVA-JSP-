package ex03;

import java.util.Scanner;

public class For3ex {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("길이 :");
		int a = sc.nextInt();
		
		
		for (int i = 0; i < a; i++) {
			for (int j = 0; j <10; j++) {
				System.out.println("");
			}
		for (int j = 0; j < (2*a)-1-(i*2); j++) {
		System.out.println("*");
		}
		System.out.println("");
		
		}
	}

}

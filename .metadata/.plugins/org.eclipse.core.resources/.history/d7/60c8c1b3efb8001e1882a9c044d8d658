package ex03;

import java.util.Scanner;

public class ex10 {

	public static void main(String[] args) {
		try (Scanner sc = new Scanner(System.in)) {
			
			int choice = 1;
			while (choice ==1) {
				int a;
				a = sc.nextInt();
				System.out.println("예금:" + a);
			    int b;
			    System.out.print("출금:");
			    b = sc.nextInt();
			    System.out.println("잔고:" + (a - b) );
			}
					
		
		}
		
		    
		
		
		
		

	}

}

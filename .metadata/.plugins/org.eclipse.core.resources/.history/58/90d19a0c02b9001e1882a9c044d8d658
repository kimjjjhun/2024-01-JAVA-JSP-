package ex03;

import java.util.Scanner;

public class For1 {

	public static void main(String[] args) {
		
		int bankbalance = 0;
		int tmp;
		boolean exit = true;
		Scanner sc = new Scanner(System.in);
		
		while ( exit == true) {
		System.out.println("-----------------------------");
		System.out.println("|1.예금\t|2.출금\t|3.잔고\t|4.종료");
		System.out.println("-----------------------------");
		int choice = sc.nextInt(); 
			switch (choice) {
			case 1:
				System.out.println("예금액>>>");
				tmp = sc.nextInt();
				bankbalance += tmp;
				break;
			case 2:
				System.out.println("출금액>>>");
				tmp = sc.nextInt();
				tmp -= bankbalance;
				break;
			case 3:
				System.out.println("잔액>>>" + bankbalance);
				break;
			default :
				exit = false;
				System.out.println("프로그램 종료");
				break;
		}
		}
	}

}

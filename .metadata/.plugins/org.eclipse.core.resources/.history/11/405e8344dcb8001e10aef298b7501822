package ex03;

import java.util.Scanner;

public class For01 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
        int sum = 0;
		for (int n = 1; n <= 100; n++) {
			int num1 = n+sum/3;
			
		int sum1 = 0;	
	    for (int m = 2; m <= 100; m++) {
		     int num2 = m+sum1/2;
				System.out.println("홀수합 + 짝수합 :" + num1 + num2);
				
			}
			
		}
        
		
		
		
		
		
	}

}

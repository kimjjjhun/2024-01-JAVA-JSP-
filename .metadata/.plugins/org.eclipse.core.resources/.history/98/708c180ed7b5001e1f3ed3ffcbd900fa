package ex03;

public class Exam01 {

	public static void main(String[] args) {
		int exam = 4000;
		
	int hour = exam/3600;
	int minute = (exam % 3600)/60;
	int second = (exam % 3600)%60;
		
		System.out.println(hour + "시간" + minute +"분" + second +"초");
        
		int exam = 5000;
		
    int hour = exam/3600;
	}

}
